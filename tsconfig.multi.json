{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/tests/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "build",
    "dist"
  ]
}